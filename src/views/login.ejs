<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login | Acesso Nerd</title>
    <meta property="og:image" content="./img/logoAcessoNerd.png" />
    <meta name="description" content="üöÄ Nave em constru√ß√£o...">
    <link rel="stylesheet" href="./css/login.css">
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@100;200;300;400;500;600;700;800;900&display=swap"
        rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

    <!-- icone do site -->
    <link rel="shortcut icon" type="image/x-icon" href="./img/icon_acessoNerd.ico" />
</head>

<body>


    <div class="login-container">
        <div class="option-group">
            <div class="login-option action-option-selected" id="login" onClick="selectOption(this.id)">
                J√° possuo cadastro
            </div>
            <div class="register-option" id="register" onClick="selectOption(this.id)">
                Quero me cadastrar
            </div>
        </div>

        <div class="form-login-container">
            <header>
                <a href="/"><img src="./img/logo-acesso-nerd.png" alt="logo"></a>
                <a href="/"><div class="title">
                    ACESSO NERD
                </div></a>
                <div class= "orientation">
                    <p>Fa√ßa seu Login para come√ßar a sua jornada nesse novo universo!!</p>
                </div>
            </header>

            <div class="form-wrapper">
                <form action="/" method="POST">

                    <% if (typeof(msg) !="undefined" ) { %>
                        <p style="color: red;">
                            <%= msg %>
                        </p>
                    <% } %>

                    <label for="email">E-mail:</label>
                    <input type="email" id="email" placeholder="seu@email.aqui" required>


                    <label for="senha">Senha:</label>
                    <div class="password-inputs">
                        <div class="password-group">
                            <input type="password" id="senha" placeholder="digite sua senha" required>
                            <i class="fa fa-eye-slash" id="olho"  ondragstart="return false;"></i>
                        </div>
    
                        <div class="confirm-password-group">
                            <input type="password" id="confirm-senha" placeholder="confirme sua senha" required >
                            <i class="fa fa-eye-slash" id="confirm-olho"  ondragstart="return false;"></i>
                        </div>
                    </div>


                    <div class="agree">
                        <input type="checkbox" id="chk-agree" required>
                        <label for="agree">Aceito todos os termos de privacidade</label>
                    </div>

                    <button id="botao">Embarcar</button>
                
                    <div class="linkContainer">
                        <div>
                            <a href="recuperar" class="link"><p>Esqueci minha senha</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <script src="/js/login.js"></script>

    <script>
        function selectOption(option) {
            if (option == 'register' ) {
                document.getElementById('register').classList.add('action-option-selected');
                document.getElementById('login').classList.remove('action-option-selected');
                document.getElementById('confirm-senha').style.display = 'initial';
                document.getElementById('confirm-olho').style.display = 'initial';
            
            } else if (option == 'login' ) {
                document.getElementById('login').classList.add('action-option-selected');
                document.getElementById('register').classList.remove('action-option-selected');
                document.getElementById('confirm-senha').style.display='none';
                document.getElementById('confirm-olho').style.display = 'none';
            }
        };

        selectOption('login');
    </script>
</body>

</html>
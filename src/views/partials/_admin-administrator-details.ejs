<!--pdp profile details panel-->
<% if (administrator.admin_id <= 0) { %>
    <form id="admin-details-form" method="POST" action="/admin/administrators" enctype="multipart/form-data" >
<% } else {%>
    <form id="admin-details-form" class="pdp-form" method="POST" action="/admin/administrators/<%= administrator.admin_id %>?_method=PUT" enctype="multipart/form-data" >
<%} %> 
    <div id="pdp-container">
        <section id="pdp-section-pics">
            <div id="pdp-grp-main-image">
                <% if( administrator.imgPath ) { %>
                    <img id="pdp-main-pic" src="<%= administrator.imgPath %>" alt="profile-img">
                <% } else { %>
                    <img id="pdp-main-pic" src="/img/profiles/placeHolderProfileImage.jpg" alt="profile-img">
                <% } %> 
            </div>
            <div id="pdp-div-input-pics">
                <label for="admin-inp-pic" id="pdp-btn-upload" class="pdp-buttons">Upload imagens</label>
                <input id='admin-inp-pic' class="pdp-inp-pics" type="file" name="admin-inp-pic" accept="image/*">
            </div>
        </section>
        <section id="pdp-section-info">
            <div id="pdp-id-status">
                <div id="pdp-div-id">
                    <label>Id:</label>
                    <% if( administrator.admin_id ) {%>
                        <input type="text" id='admin-id' class="pdp-id" name="id" value="<%= administrator.admin_id %>" readonly>
                    <% } else { %>
                        <input type="text" id='admin-id' class="pdp-id" name="id" readonly>
                    <% } %> 
                </div>
                <div id="pdp-status">
                    <% let status = administrator.status == 'A'? 'Ativo' : 'Inativo' %> 
                    <p id="admin-status"><%= status %> </p>
                    <div id="pdp-div-switch">
                        <label class="pdp-switch">
                            <% if(status === 'Ativo') {%> 
                                <input class="pdp-inp-switch" id='admin-status-switch' type="checkbox" value='A' checked>
                            <% } else { %>
                                <input class="pdp-inp-switch" id='admin-status-switch' value='I' type="checkbox">
                            <% } %> 
                            <span class="pdp-slider pdp-round"></span>
                        </label>
                    </div>
                </div>
            </div>
            <div class="pdp-div-groups">
                <div id="pdp-div-user">
                    <div class="pdp-div-titles">
                        <span>Usu√°rio</span>
                    </div>
                    <input id="pdp-inp-user" class="pdp-inputs" name="user" type="text" value="<%= administrator.user %>" required>
                </div>
            </div>
            <div class="pdp-div-groups">
                <div id="pdp-div-name">
                    <div class="pdp-div-titles">
                        <span>Nome</span>
                    </div>
                    <input id="pdp-inp-name" class="pdp-inputs" name="name" type="text" value="<%= administrator.name %>" required>
                </div>
            </div>
            <div class="pdp-div-groups">
                <div id="pdp-div-cpf">
                    <div class="pdp-div-titles">
                        <span>CPF</span>
                    </div>
                    <input id="pdp-inp-cpf" class="pdp-inputs" name="cpf" type="text" value="<%= administrator.cpf %>" required>
                </div>
            </div>
            <div class="pdp-div-groups">
                <div id="pdp-div-email">
                    <div class="pdp-div-titles">
                        <span>Email</span>
                    </div>
                    <input id="pdp-inp-email" class="pdp-inputs" name="email" type="text" value="<%= administrator.email %>" required>
                </div>
            </div>
            <% if (!administrator.admin_id) { %>
                <div class="pdp-div-groups">
                    <div id="pdp-div-password">
                        <div class="pdp-div-titles">
                            <span>Password</span>
                        </div>
                        <input id="pdp-inp-password" class="pdp-inputs" name="password" type="text" required>
                    </div>
                </div>
            <%} %> 
            <div id="pdp-grp-buttons">
                <div>
                    <button id="btn-admin-save" class="pdp-button-save pdp-buttons" type="submit">Salvar</button>
                    <button id="btn-admin-cancel" class="pdp-button-cancel pdp-buttons">Cancelar</button>
                </div>
            </div>
        </section>
    </div>
</form>
<script src="/js/admin-administrator-details.js"></script>
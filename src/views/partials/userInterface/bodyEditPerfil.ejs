<div id="user-edit-perfil">
    <div class="user-interface-top">
        <img src="/img/_Logo.svg" alt="">
    </div>
    <div class="user-edit-form">
        <form action="/painel/usuario/perfil" method="POST">
            <div>
                <div class="column mg">
                    <label for="">Nome</label>
                    <input type="text" class="input-edit-perfil"  name="user_name"value="<%= inforUser.user_name %>">
                </div>
                <div class="column mg">
                    <label for="">CPF</label>
                    <input type="text" class="input-edit-perfil" value="<%= inforUser.cpf%>">
                </div>
                
            </div>
            <div class="flex-wrap">
                <div class="column mg" >
                    <label for="">Telefone</label>
                    <input type="text" class="input-edit-perfil" name="telefone" value="<%= inforUser.telefone %>">
                </div>
                <div class="column mg">
                    <label for="">Nascimento</label>
                    <input type="text" class="input-edit-perfil" name="birth_date" value="<%= inforUser.birth_date %>">
                </div>
                    
            </div>

            <div>
                <div class="column mg">
                    <label for="">Email</label>
                    <input type="email" name="email" class="input-edit-perfil" style="width: 100%;" value="<%= inforUser.email %>">
                </div>
                    
            </div>
            <div class="flex-wrap">
                <div class="column mg">
                    <label for="">Nova Senha</label>
                    <input type="password" name="password" class="input-edit-perfil">
                </div>
                <div class="column mg">
                    <label for="">Confirma Senha</label>
                    <input type="password" name="passwordCofirm" class="input-edit-perfil">
                </div>
                    
            </div>
            <div style="justify-content: center; align-items: center; width: 30rem;">
                <button class="btn-update">Atualizar</button>

            </div>
        
        </form>

    </div>
</div>
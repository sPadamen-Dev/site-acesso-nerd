<div class="product-body ">
    <div class="product-wrapper-outer-box">
        <div class="product-wrapper-inner-box">
            <div class="like">
                <img src="/img/like.svg" alt="like it" title="Favoritos">
            </div>

            <div id="prod-session1">
                <div class="product-container">
                    
                        <div class="product-main-pic">
                            <% if(product.imgPath) {%>
                                <img id="pd-main-pic" src='<%= product.imgPath %> ' alt="product-main-pic">
                            <%} else {%>  
                                <img id="pd-main-pic" src="/img/placeHolderProductImage.jpg" alt="product-main-pic">
                            <%}%>  
                        </div>
                    
                    <div class="product-details">
                        <div class="product-header">
                            <span><%= product.name %></span>
                        </div>
                        <div class="product-sizes">
                            <div class="size-box">PP</div>
                            <div class="size-box">P</div>
                            <div class="size-box size-available">M</div>
                            <div class="size-box">G</div>
                            <div class="size-box">GG</div>
                        </div>
                        <div class="product-description">
                            <p>                   
                            <%= product.description %> 
                            </p>
                        </div>
                        <div class="product-price">
                            <div class="installment">
                                <span class="installment-parts">5x</span>
                                <span class="installment-price">R$ 10,18</span>
                            </div>
                            <div class="at-sight">
                                <span class="or">ou</span>
                                <span class="at-sight-price">R$ 50,90 Ã  vista</span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="shipping-buy">
                    <div class="shipping">
                        <div class="cep-entry">
                            <label for="cep">CEP:</label>
                            <input id="prod-inp-cep" class="pdp-inputs" type="text">
                        </div>
                        <button class="pdp-button-search pdp-buttons">Calcular Frete</button>
                    </div>
                    <div class="buy">
                        <button class="pdp-button-edit pdp-buttons">Adicionar ao carrinho</button>
                        <button class="pdp-button-save pdp-buttons">COMPRAR</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="/js/product-details.js"></script>
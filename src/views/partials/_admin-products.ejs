<div id="panel-bar">
    <div id="div-title">
        <span>Produtos</span>
    </div>
    
    <div id="panel-filters">
        <form action="">
            <div id="obj-filters">

                <span>Código:</span>
                <input type="text" name="product-id" id="product-id" class="input-id">

                <span>Produto:</span>
                <input type="text" name="product-description" id="product-description">

                <span>Tipo:</span>
                <select id="types">
                    <!--<optgroup label="agrupador">-->
                        <option value="canecas">Escolha um tipo</option>
                        <option value="canecas">CANECAS</option>
                        <option value="camisetas">CAMISETAS</option>
                        <option value="gadgets">GADGETS</option>
                    <!--</optgroup>-->
                </select>
                
                <span>Tema:</span>
                <select id="themes">
                    <option value="canecas">Escolha um tema</option>
                    <option value="disney">DISNEY</option>
                    <option value="marvel">MARVEL</option>
                </select>
            </div>
            <div>
                <button>Filtrar</button>
            </div>
        </form>
    </div>

    <div class="grid-products">

        
            <div class="product-display-row">

                <table>
                    <tr>
                        <th>Imagem</th>
                        <th>Id</th>
                        <th>Tipo</th>
                        <th>Tema</th>
                        <th>Descrição</th>
                        <th>Qtd. Parcelas</th>
                        <th>Preço Parcelas</th>
                        <th>Preço à Vista</th>
                      </tr>
                        <% productList.forEach((product)=> {%>
                            <tr>
                                <td><img style="width: 20px; height: 20px;" src="<%=product.imgPath %>" alt="profile-pic"></td>
                                <td><%=product.id %> </td>
                                <td><%=product.type %> </td>
                                <td><%=product.theme %></td>
                                <td><%=product.description %></td>
                                <td><%=product.installmentParts %></td>
                                <td><%=product.installmentPrice %></td>
                                <td><%=product.atSightPrice %></td>
                                <td><button class="btn-show" onclick="window.location.replace('/admin/product/<%=product.id %>/edit');">Exibir</button></td>
                            </tr>
                        <%}) %> 
                      </tr>
                    </table>
            </div>
    </div>
</div>


<!--pdp profile details panel-->
<form id="admin-details-form" method="POST" action="/admin/administrator" enctype="multipart/form-data" >
    <div id="pdp-container">
        <section id="pdp-section-pics">
            <div id="pdp-div-top-space"></div>
            <div id="pdp-grp-main-image">
                <img id="pdp-main-pic" src="/img/profiles/placeHolderProfileImage.jpg" alt="profile-img">
            </div>
            <div id="pdp-div-input-pics">
                <label for="admin-inp-pic" id="pdp-btn-upload" class="pdp-buttons">Upload imagens</label>
                <input type="file" id="admin-inp-pic" name="admin-inp-pic" class="pdp-inp-pics" accept="image/*">
            </div>
        </section>
        <section id="pdp-section-info">
            <div id="pdp-status">
                <p id="admin-status">Ativo</p>
                <div id="pdp-div-switch">
                    <label class="pdp-switch">
                        <input class="pdp-inp-switch" id='admin-status-switch' type="checkbox" value='A' checked>
                        <span class="pdp-slider pdp-round"></span>
                    </label>
                </div>
            </div>
            <div class="pdp-div-groups">
                <div id="pdp-div-user">
                    <div class="pdp-div-titles">
                        <span>Usu√°rio</span>
                    </div>
                    <input id="pdp-inp-user" class="pdp-inputs" name="user" type="text" required>
                </div>
            </div>
            <div class="pdp-div-groups">
                <div id="pdp-div-name">
                    <div class="pdp-div-titles">
                        <span>Nome</span>
                    </div>
                    <input id="pdp-inp-name" class="pdp-inputs" name="name" type="text" required>
                </div>
            </div>
            <div class="pdp-div-groups">
                <div id="pdp-div-cpf">
                    <div class="pdp-div-titles">
                        <span>CPF</span>
                    </div>
                    <input id="pdp-inp-cpf" class="pdp-inputs" name="cpf" type="text" required>
                </div>
            </div>
            <div class="pdp-div-groups">
                <div id="pdp-div-email">
                    <div class="pdp-div-titles">
                        <span>Email</span>
                    </div>
                    <input id="pdp-inp-email" class="pdp-inputs" name="email" type="text" required>
                </div>
            </div>
            <div class="pdp-div-groups">
                <div id="pdp-div-password">
                    <div class="pdp-div-titles">
                        <span>Password</span>
                    </div>
                    <input id="pdp-inp-password" class="pdp-inputs" name="password" type="text" required>
                </div>
            </div>
            <div id="pdp-grp-buttons">
                <div>
                    <button id="btn-admin-save" class="pdp-button-save pdp-buttons" type="submit">Salvar</button>
                    <button id="btn-admin-cancel" class="pdp-button-cancel pdp-buttons">Cancelar</button>
                </div>
            </div>
        </section>
    </div>
</form>
<script src="/js/admin-administrator-details.js"></script>